{
  "manifest_version": 3,
  "name": "Chrome Extension Boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Chrome Extensions",
  "author": "Your Name Here",
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["cookies", "storage"],
  "host_permissions": ["https://pleased-jaguar-26.clerk.accounts.dev/"]
}
